<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:effects="clr-namespace:Avalonia.Media.Effects;assembly=Avalonia.Controls"
        x:Class="Golden_votes.Views.LoginWindow"
        Icon="../Assets/icon.png"
        Title="Golden Votes"
        WindowStartupLocation="CenterScreen">
  
  <!-- Global drop-shadow effect -->

  <!-- Darkened background to focus the login card -->
  <Grid Background="#FF2D2D30">
    <Button Name="TopRightButton"
            Content="Сервер"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="10"
            Background="#FF3C3C3C"
            Foreground="White"
            CornerRadius="4"
            Click="" />
    <Border Background="#CCFFFFFF"
            CornerRadius="16"
            Padding="24"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Effect="{StaticResource CardShadow}">
      <StackPanel Name="LoginPanel" Spacing="20">
        <!-- Header -->
        <TextBlock Text="Авторизация"
                   FontSize="22"
                   FontWeight="SemiBold"
                   HorizontalAlignment="Center"
                   Foreground="#333333" />

        <!-- Login field -->
        <StackPanel Spacing="6">
          <TextBlock Text="Логин"
                     FontSize="14"
                     Foreground="#555555" />
          <TextBox Name="LoginTextBox"
                   Watermark="Введите логин"
                   Height="32" />
        </StackPanel>

        <!-- Password field -->
        <StackPanel Spacing="6">
          <TextBlock Text="Пароль"
                     FontSize="14"
                     Foreground="#555555" />
          <TextBox Name="PasswordTextBox"
                   Watermark="Введите пароль"
                   PasswordChar="●"
                   Height="32" />
        </StackPanel>

        <!-- Login button -->
        <Button Name="LoginButton"
                Content="Войти"
                FontSize="16"
                Height="36"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                Background="#FF007ACC"
                Foreground="White"
                CornerRadius="8"
                Click="OnLoginClick" />
      </StackPanel>
    </Border>
  </Grid>
</Window>
