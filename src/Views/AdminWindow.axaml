<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Golden_votes.Views.AdminWindow"
        Title="Golden Votes"
        WindowStartupLocation="CenterScreen"
        Icon="../Assets/icon.png">

  <TabControl>
    <!-- Вкладка: Голосования -->
    <TabItem Header="Голосования">
      <Grid Margin="10">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="2*" />
          <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Список голосований -->
        <StackPanel>
          <TextBlock Text="Голосования:" FontWeight="Bold" Margin="0,0,0,5" />
          <ListBox Name="VotesList" Height="300" />
          <Button Content="Создать" Width="100" Margin="0,10,0,0" HorizontalAlignment="Left" Click="OnVoteCreateClick"/>
        </StackPanel>

        <!-- Статистика -->
        <Border Grid.Column="1" Margin="10,0,0,0" BorderBrush="Gray" BorderThickness="1" CornerRadius="10">
          <TextBlock Text="Статистика по голосованию"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Center"
                     FontStyle="Italic"
                     Foreground="Gray" />
        </Border>
      </Grid>
    </TabItem>

    <!-- Вкладка: Пользователи -->
    <TabItem Header="Пользователи">
      <Grid Margin="10">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="2*" />
          <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Список пользователей -->
        <StackPanel>
          <TextBlock Text="Пользователи:" FontWeight="Bold" Margin="0,0,0,5" />
          <ListBox Name="UsersList" Height="300" />
          <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
            <Button Content="+" Width="40" Margin="0,0,5,0" />
            <Button Content="-" Width="40" />
          </StackPanel>
        </StackPanel>

        <!-- Форма создания пользователя -->
        <Border Grid.Column="1" Margin="10,0,0,0" BorderBrush="Gray" BorderThickness="1" CornerRadius="10" Padding="10">
          <StackPanel Spacing="10">
            <TextBlock Text="Логин" />
            <TextBox Text="user1" />

            <TextBlock Text="Пароль" />
            <TextBox PasswordChar="●" />

            <TextBlock Text="Роль пользователя" />
            <ComboBox>
              <ComboBoxItem Content="Админ" />
              <ComboBoxItem Content="Пользователь" />
            </ComboBox>

            <Button Content="Создать" Width="100" Margin="0,10,0,0" HorizontalAlignment="Left" />
          </StackPanel>
        </Border>
      </Grid>
    </TabItem>
  </TabControl>
</Window>
